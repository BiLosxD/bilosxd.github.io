@import 'font'

/**
 * Global */
$w = #FFF
$b = #000
$r = #CC0000
$g = #0ac775
$g_alt = #339b72
$gry = #ECECEC
$bg = #192d35
$outline = rgba(0, 155, 114, .25)
$outline_alt = rgba(0, 155, 114, .2)

image_default =
    height: auto
    vertical-align: middle
    object-fit: cover

body
    &::-webkit-scrollbar
        width: 20px
        background-color: $w
    &::-webkit-scrollbar-track
        box-shadow: none
    &::-webkit-scrollbar-thumb
        background-color: $g
        border: 6px solid rgba(0, 0, 0, 0)
        background-clip: padding-box
        border-radius: 50px

::-webkit-scrollbar-track
	-webkit-box-shadow: none
	background-color: $w
	border-radius: 10px
::-webkit-scrollbar
	width: 8px
	height: 10px
::-webkit-scrollbar-thumb
    border-radius: 10px
    border: 1px solid rgba(0, 0, 0, 0)
    background-clip: padding-box
    background-color: #C9CAD3

body
    overflow-x: hidden
    &.no_click
        pointer-events: none
    &.no_scroll
        overflow-y: hidden

#app
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

*,
*:before,
*:after
    user-select: none
    box-sizing: border-box
    margin: 0

input,
input:before,
input:after,
textarea,
textarea:before,
textarea:after,
select,
select:before,
select:after
    user-select: initial
    -webkit-appearance: none
    box-shadow: none
    outline: none
    background-color: $w

textarea
    resize: vertical

button
    outline: none
    box-shadow: none

h1,
h2,
h3,
h4,
h5
    font-weight: normal

img
    height: auto
    vertical-align: middle

table
    display: table
    width: 100%
    border-collapse: collapse

.hidden
    display: none

.no_font
    font-size: 0px

a
    text-decoration: none

#nprogress
    .bar
        height: 6px
        background: $bg

#navbar
    position: fixed
    top: 0
    width: 100%
    display: flex
    flex-flow: row wrap
    align-items: center
    padding: 20px
    z-index: 8
    .nav_left
        flex: 0 0 auto
        .logo
            montserrat(18px, true, 'light')
            color: $w
            letter-spacing: 0.5px
    .burger
        position: fixed
        top: calc(0% + (40px / 2))
        right: calc(0% + 20px)
        width: 50px
        height: 50px
        z-index: 999
        cursor: pointer
        background-color: $bg
        border-radius: 50%
        box-shadow: 0 0 20px transparent
        transition: .3s ease-in-out
        &:hover
            box-shadow: 0 0 25px rgba(25, 45, 53, 0.65)
            transition: .3s ease-in-out
        &.toggled
            background-color: $g
            transition: .3s ease-in-out
            .bar_wrapper
                .bar
                    background-color: $bg
                    transition: .3s ease-in-out
                    &.top
                        top: 5px
                        transform: rotate(45deg)
                        margin-bottom: 0
                        transition: .3s ease-in-out
                    &.middle
                        opacity: 0
                        visibility: hidden
                        transition: .3s ease-in-out
                    &.bottom
                        bottom: 5px
                        transform: rotate(-45deg)
                        transition: .3s ease-in-out
        .bar_wrapper
            position: absolute
            top: 50%
            left: 0
            right: 0
            text-align: center
            margin: 0 auto
            transform: translateY(-50%)
            padding: 10px
            .bar
                position: relative
                width: 100%
                height: 3px
                background-color: $w
                border-radius: 10px
                transition: .3s ease-in-out
                &.top,
                &.middle
                    margin-bottom: 5px
                &.top
                    top: 0
                &.bottom
                    bottom: 0
                &.middle
                    opacity: 1
                    visibility: visible
                    transition: .3s ease-in-out
    .nav_parent
        position: fixed
        z-index: 99
        background-color: $bg
        transition: width 0.3s, height 0.3s
        width: 0
        height: 0
        top: 0px
        right: 0px
        transform-origin: 100% 0%
        border-bottom-left-radius: 500px
        .nav_list
            list-style: none
            padding: 0
            opacity: 0
            position: absolute
            top: 50%
            left: 0
            right: 0
            text-align: center
            transform: translateY(-75%)
            .list_item
                margin-bottom: 10px
                &:last-child
                    margin-bottom: 0
                .item_link
                    color: $w
                    montserrat(24px, true, 'bold')
                    letter-spacing: 1px
                    cursor: pointer
                    transition: .3s ease-in-out
                    &:hover
                        color: $g
                        transition: .3s ease-in-out
        &.opened
            width: 500px
            height: 500px
            border-bottom-left-radius: 500px
            animation: anim-jelly 0.8s linear forwards
            .nav_list
                padding: 0 0 0 60px
                opacity: 1
                transition: opacity 0.3s 0.3s

.social_item_list
    .social_list
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: center
        list-style: none
        padding: 0
        margin-top: 20px
        .social_item
            margin-right: 10px
            &:last-child
                margin-right: 0
            a
                .social_link
                    .fill
                        fill: $w
                        transition: .3s ease-in-out
                &:hover
                    .social_link
                        .fill
                            fill: $g
                            transition: .3s ease-in-out

#home
    #banner
        position: relative
        width: 100%
        height: 100vh
        &::before
            content: ''
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
            z-index: 0
            background-image: linear-gradient(to right, $g_alt, $g)
            animation: slide_from_left 1s
        &::after
            content: ''
            position: absolute
            top: 50%
            left: 50%
            width: 800px
            height: 800px
            z-index: 1
            border-radius: 50%
            background-color: rgba(255, 255, 255, 0.15)
            transform: translate(-50%, -50%)
            animation: slide_from_bottom 2s
        .overlay
            position: absolute
            top: 50%
            left: 0
            right: 0
            z-index: 7
            text-align: center
            transform: translateY(-50%)
            h2
                montserrat(120px, true, 'bold')
                color: $w
                animation: slide_from_left 1s
            h3
                montserrat(60px, true, 'bold')
                color: $w
                animation: slide_from_right 1.5s
            .default_btn
                margin-top: 50px
                animation: slide_from_bottom 1.5s

#wave
    position: absolute
    bottom: 0
    width: 100%
    height: auto

.default_btn
    display: inline-block
    padding: 20px
    montserrat(16px, true, 'medium')
    color: $w
    background-color: $bg
    border: 2px solid $bg
    width: auto
    border-radius: 0px
    cursor: pointer
    transition: .3s ease-in-out
    &:hover
        border-radius: 20px 0 20px 0
        color: $bg
        background-color: $g
        transition: .3s ease-in-out

/**
 * Animation */
.fade-enter-active,
.fade-leave-active
    transition: all .3s ease-in-out

.fade-enter,
.fade-leave-to
    opacity: 0

