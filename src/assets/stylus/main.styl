@keyframes fade
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }

@keyframes slide_from_left
	from {
		opacity: 0
        transform: translateX(-100vh)
    }
	to {
		opacity: 1
        transform: translateX(0px)
    }

@keyframes slide_from_right
	from {
		opacity: 0
        transform: translateX(100vh)
    }
	to {
		opacity: 1
        transform: translateX(0px)
    }

@keyframes slide_from_bottom
	from {
		opacity: 0
        transform: translateY(100px)
    }
	to {
		opacity: 1
        transform: translateY(0px)
    }
